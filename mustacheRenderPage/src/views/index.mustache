<!-- index.html -->
<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
</head>

<body>
    <header>
        <h1>{{title}}</h1>
        <nav>
            <ul>
                {{#menu}}
                <li><a href="{{url}}">{{label}}</a></li>
                {{/menu}}
            </ul>
        </nav>
    </header>
    <main>
        {{#posts}}
        <article>
            <h2>{{title}}</h2>
            <p>{{content}}</p>
        </article>
        {{/posts}}
    </main>
    <footer>
        <p>&copy; {{year}} - {{company}}</p>
    </footer>
</body>

</html>